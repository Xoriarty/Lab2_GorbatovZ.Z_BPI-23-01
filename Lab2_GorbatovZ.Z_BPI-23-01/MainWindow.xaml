<Window x:Class="Lab2_GorbatovZ.Z_BPI_23_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2_GorbatovZ.Z_BPI_23_01" xmlns:local1="clr-namespace:Lab2_GorbatovZ.Z_BPI_23_01.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <RadioButton IsChecked="True" Margin="5" Name="Radiol">
            <RadioButton.DataContext>
                <local1:FunctionViewModelA />
            </RadioButton.DataContext>
            <WrapPanel>
                <Image Source="{Binding ImagePath}" Height="30" Width="370" Stretch="UniformToFill"/>
                <GroupBox Header="Parameters">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Label Content="a = " Grid.Column="0" Grid.Row="0"/>
                        <TextBox Text="{Binding A, StringFormat=N2}" Grid.Column="1" Grid.Row="0"
                                 MinWidth="70" />

                        <Label Content="f = " Grid.Column="0" Grid.Row="1"/>
                        <ComboBox Grid.Column="1" Grid.Row="1" ItemsSource = "{Binding cmbContent}" SelectedIndex = "{Binding Index}"/>

                        <Label Content="Ответ " Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Result, StringFormat=N2}" Grid.Column="2" Grid.Row="1"
                                   VerticalAlignment="Center"  HorizontalAlignment="Center"/>
                    </Grid>
                </GroupBox>
            </WrapPanel>
        </RadioButton>

        <RadioButton Margin="5" Name="Radio2">
            <RadioButton.DataContext>
                <local1:FunctionViewModelB/>
