                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Label Content="a = " Grid.Column="0" Grid.Row="0"/>
                        <TextBox Text="{Binding A, StringFormat=N2}" Grid.Column="1" Grid.Row="0"
                                 MinWidth="70" />

                        <Label Content="b = " Grid.Column="2" Grid.Row="0"/>
                        <TextBox Text="{Binding B, StringFormat=N2}" Grid.Column="3" Grid.Row="0"
                                 MinWidth="70" />

                        <Label Content="f = " Grid.Column="0" Grid.Row="1"/>
                        <ComboBox Grid.Column="1" Grid.Row="1" ItemsSource = "{Binding cmbContent}" SelectedIndex = "{Binding Index}"/>

                        <Label Content="Ответ " Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Result, StringFormat=N2}" Grid.Column="3" Grid.Row="1"
                                   VerticalAlignment="Center"  HorizontalAlignment="Center"/>
                    </Grid>
                </GroupBox>
            </WrapPanel>
        </RadioButton>

