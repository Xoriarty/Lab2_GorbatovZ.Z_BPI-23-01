                        <ComboBox Grid.Column="1" Grid.Row="1" ItemsSource = "{Binding cmbContent}" SelectedIndex = "{Binding IndexC}"/>

                        <Label Content="Ответ " Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center"/>
